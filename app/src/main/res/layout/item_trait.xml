<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_traits"
        android:background="@drawable/background_trait"
        android:orientation="vertical"
        android:padding="@dimen/default_card_padding">

        <TextView
            android:id="@+id/txt_trait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_card_padding"
            android:textColor="@color/color_primary"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_traits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</RelativeLayout>
